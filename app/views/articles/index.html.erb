<%= render "navbar" %>
<div class="container-fluid bg-light d-flex row justify-content-center position-fixed p-3 pb-5 h-100 overflow-auto">
    <p><%= notice %></p>
    <div class = 'd-flex'>
        <h1>Articles<h1>
        <button class="btn btn-outline-secondary mx-2">
            <%=link_to "New Article", new_article_path %>
        </button>
    </div>
    
    <% @articles.each do |article| %>
        <div class='container bg-dark-subtle border rounded m-2'>
            <h1>
                <%= link_to "#{article.title}", article %>
            <h1>
            <h6><%= article.updated_at.strftime("%b %d %Y") %></h6>
        </div>
    <% end %>
</div>